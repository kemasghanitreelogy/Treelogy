<div class="wrapper {% if section.settings.box_container %} main-grid  {% else %} full-width  {% endif %}">
  <div class="background parallax desktop">
    {% render 'Image', image: section.settings.background %}
  </div>

  <div class="background parallax mobile">
    {% render 'Image', image: section.settings.background_mobile | default:section.settings.background %}
  </div>

  <div class="content">
    <div class="inner position-{{ section.settings.text_position }}">
      <div class="title h1 desktop">{{ section.settings.title | newline_to_br }}</div>
      <div class="title h3 mobile">
        {{ section.settings.title_mobile | newline_to_br }}
      </div>
      <div class="description body-desk">
        <span class="desktop">{{ section.settings.description | newline_to_br }}</span>
        <span class="mobile">{{ section.settings.description_mobile | newline_to_br }}</span>
      </div>
      {% render 'PrimaryButton',
        url: section.settings.button_url,
        title: section.settings.button_label,
        type: 'transparent'
      %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Featured Text",
  "tag": "section",
  "class": "section featured-banner-text-wrapper",
  "settings": [
    {
      "type": "textarea",
      "id": "title",
      "label": "Title",
      "default": "Title"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Description"
    },

    {
      "type": "image_picker",
      "id": "background",
      "label": "Background"
    },

    {
      "type": "header",
      "content": "Mobile content"
    },

    {
      "type": "textarea",
      "id": "title_mobile",
      "label": "Title",
      "default": "Title"
    },
    {
      "type": "textarea",
      "id": "description_mobile",
      "label": "Description",
      "default": "Description"
    },

    {
      "type": "image_picker",
      "id": "background_mobile",
      "label": "Background"
    },

    {
      "type": "text",
      "id": "button_label",
      "label": "Button label"
    },

    {
      "type": "url",
      "id": "button_url",
      "label": "Button url"
    },

    {
      "type": "checkbox",
      "id": "box_container",
      "label": "Image container"
    },

    {
      "type": "select",
      "id": "text_position",
      "label": "Text position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "right"
    }
  ],
  "presets": [
    {
      "name": "Featured text"
    }
  ]
}
{% endschema %}
