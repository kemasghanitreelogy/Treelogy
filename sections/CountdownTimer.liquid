{% stylesheet %}

.countdown-container {
  padding: 0 40px;
}
.countdown-section {
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  max-width: 500px;
  margin: auto;
}

.countdown-wrapper {
  display: flex;
  justify-content: space-between;
  width: 100%;
  padding: 0 30px 18px;
  flex-wrap: wrap;
  text-align: center;
}


.countdown-label {
  font-size: 12px;
  font-weight: 400;
  letter-spacing: 2px;
  text-transform: uppercase;
}

.countdown-value {
  font-size: 14px;
  font-weight: 500;
  line-height: 1;
}

.countdown-description {
  max-width: 800px;
  margin: 0 auto 20px;
  font-size: 12px;
  line-height: 1.6;
  font-weight: 300;
  padding: 0 30px;
}

.countdown-footer {
  max-width: 900px;
  margin: 0 auto;
  font-size: 9px;
  line-height: 1.6;
  font-weight: 300;
}

@media (min-width: 768px) {
  .countdown-wrapper {
    gap: 20px;
  }
  
  .countdown-item {
    min-width: 80px;
  }

  .countdown-description {
    font-size: 14px;
  }
  .countdown-footer {
    font-size: 13px;
  }
  
  .countdown-value {
    font-size: 36px;
  }
  
  .countdown-label {
    font-size: 12px;
  }
}
{% endstylesheet %}