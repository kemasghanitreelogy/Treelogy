{% style %}
  .moringa-hero {
    padding: 60px 20px;
    text-align: center;
    background: #f4f9f4;
  }
  .moringa-hero h1 {
    color: #2d5a27;
    font-size: 2.5rem;
  }
{% endstyle %}

<section class="moringa-hero">
  <div class="page-width">
    <h1>{{ section.settings.title }}</h1>
    <div class="rte">
      {{ section.settings.description }}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Page Hero",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading"
      }, {
        "type": "richtext",
        "id": "description",
        "label": "Description"
      }
    ]
  }
{% endschema %}