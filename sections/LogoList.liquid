{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .logo-list__container {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding-left: 20px;
    padding-right: 20px;
  }

  .logo-list__grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    gap: {{ section.settings.gap_mobile }}px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

.logo-list__image {
  display: block;
  width: 100%;
  height: auto;
  max-height: 50px;
  opacity: {{ section.settings.opacity }}%;
  transition: opacity 0.3s ease;
}

.logo-list__link:hover .logo-list__image {
  opacity: 100%;
}

/* Tablet & Desktop Adjustments */
@media screen and (min-width: 750px) {
  .logo-list__grid {
    gap: {{ section.settings.gap_desktop }}px;
  }

  .logo-list__item {
    /* Desktop: Auto width based on content, or distribute evenly */
    flex: 0 1 auto;
  }
}
{%- endstyle -%}

<div class="section-{{ section.id }}-padding" style="transparent; max-width: 1100px; margin-left: auto; margin-right: auto;">
  <div class="logo-list__container">
    {%- if section.settings.heading != blank -%}
      <h2 style="text-align: center; color: {{ section.settings.heading_color }}; margin-bottom: 2rem;">
        {{ section.settings.heading }}
      </h2>
    {%- endif -%}

    <div class="logo-list__grid">
      {%- for block in section.blocks -%}
        <div class="logo-list__item" {{ block.shopify_attributes }}>
          {%- if block.settings.link != blank -%}
            <a href="{{ block.settings.link }}" class="logo-list__link">
          {%- endif -%}

          {%- if block.settings.image != blank -%}
            {{
              block.settings.image | image_url: width: 400 | image_tag: loading: 'lazy', class: 'logo-list__image', widths: '100, 200, 300, 400', alt: block.settings.image.alt | default: 'Logo'
            }}
          {%- else -%}
            {{ 'image' | placeholder_svg_tag: 'logo-list__image' }}
          {%- endif -%}

          {%- if block.settings.link != blank -%}
            </a>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>

    {% if section.blocks.size == 0 %}
      <div style="text-align: center; opacity: 0.6;">
        Add "Logo" blocks in the theme editor.
      </div>
    {% endif %}
  </div>
</div>

