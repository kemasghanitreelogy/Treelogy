{% assign selected_collection = section.settings.collection %}
{% assign products_limit = section.settings.products_limit | default: 8 %}
{% assign free_product = settings.free_product.id %}

<div class="featured-products-section">
  <div class="container">
    {% if selected_collection and selected_collection.products.size > 0 %}
      <div class="featured-products-grid">
        {% for product in selected_collection.products limit: products_limit %}
          {% assign has_available_variant = false %}
          {% assign first_available_variant = nil %}

          {% for variant in product.variants %}
            {% if variant.available %}
              {% assign has_available_variant = true %}
              {% unless first_available_variant %}
                {% assign first_available_variant = variant %}
              {% endunless %}
            {% endif %}
          {% endfor %}

          <div class="featured-product-card" data-product-id="{{ product.id }}">
            <div class="product-image-wrapper">
              <a href="{{ product.url }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | img_url: '600x' }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    loading="lazy">
                {% else %}
                  {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
              </a>

              {% if has_available_variant and free_product != product.id %}
                <div class="button-wrapper">
                  {% if product.variants.size > 1 %}
                    <a
                      href="#"
                      class="button-cart button-quick-add-cart overlay-button open-popup-variants"
                      data-title="{{ product.title }}"
                      data-slug="{{ product.url }}">
                      {{ 'products.general.add_to_cart' | t }}
                    </a>
                  {% else %}
                    <button
                      type="button"
                      class="button-cart button-quick-add-cart overlay-button button-direct-add"
                      data-variant-id="{{ first_available_variant.id }}">
                      {{ 'products.general.add_to_cart' | t }}
                    </button>
                  {% endif %}
                </div>
              {% endif %}
            </div>
            <a href="{{ product.url }}">
              <div class="product-info">
                <div class="top">
                  {% render 'Rating'
                    , product: product %}
                </div>

                <h3 class="product-title">
                  <p href="{{ product.url }}">{{ product.title }}</p>
                </h3>

                <div class="product-badges">
                  {% for tag in product.tags %}
                    {% assign check = tag | split: 'exclude' %}
                    {% unless check.size > 1 %}
                      <span class="badge-pill">{{ tag | capitalize }}</span>
                    {% endunless %}
                  {% endfor %}
                </div>

                <div class="product-description">
                  {{ product.description | strip_html | truncatewords: 20 }}
                </div>

                {% if product.metafields.custom.product_detail.value %}
                  {% for detail in product.metafields.custom.product_detail.value %}
                    {% if detail.title == "Benefits" %}
                      <ul class="benefits-list">
                        {{ detail.description | metafield_tag }}
                      </ul>
                    {% endif %}
                  {% endfor %}
                {% endif %}

                <div class="product-price">
                  {% if product.compare_at_price > product.price %}
                    <span class="price price-compare">{{ product.compare_at_price | money }}</span>
                    <span class="price price-sale">{{ product.price | money }}</span>
                  {% else %}
                    <span class="price">{{ product.price | money }}</span>
                  {% endif %}
                </div>

                {% if has_available_variant and free_product != product.id %}
                  {% if product.variants.size > 1 %}
                    <a
                      href="#"
                      class="button-cart button-quick-add-cart open-popup-variants"
                      data-title="{{ product.title }}"
                      data-slug="{{ product.url }}">
                      {{ 'products.general.add_to_cart' | t }}
                    </a>
                  {% else %}
                    <button
                      type="button"
                      class="button-cart button-quick-add-cart button-direct-add"
                      data-variant-id="{{ first_available_variant.id }}">
                      {{ 'products.general.add_to_cart' | t }}
                    </button>
                  {% endif %}
                {% elsif free_product != product.id %}
                  <button
                    type="button"
                    class="button-sold-out"
                    disabled>
                    {{ 'products.general.sold_out' | t }}
                  </button>
                {% endif %}
              </div>
            </a>
          </div>
        {% endfor %}
      </div>

      {% if section.settings.show_view_all and selected_collection.url %}
        <div class="view-all-wrapper">
          <a href="{{ selected_collection.url }}" class="button button-view-all">
            {{ section.settings.view_all_text | default: 'View All' }}
          </a>
        </div>
      {% endif %}
    {% else %}
      <div class="empty-collection">
        <p>{{ section.settings.empty_text | default: 'No products found. Please select a collection.' }}</p>
      </div>
    {% endif %}
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
  const directAddButtons = document.querySelectorAll('.button-direct-add');
  
  const textAdding = "{{ 'products.product.adding' | t | default: 'Adding...' }}";
  const textError = "{{ 'products.product.error' | t | default: 'Error' }}";

  directAddButtons.forEach(button => {
    button.addEventListener('click', function(e) {
      e.preventDefault();
      
      const variantId = this.getAttribute('data-variant-id');
      if (!variantId) return;

      const originalText = this.innerHTML;
      this.innerHTML = textAdding;
      this.style.opacity = '0.7';

      let formData = {
       'items': [{
        'id': variantId,
        'quantity': 1
        }]
      };

      fetch(window.Shopify.routes.root + 'cart/add.js', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(formData)
      })
      .then(response => response.json())
      .then(data => {

        this.innerHTML = originalText;
        this.style.opacity = '1';
        
        const cartIcon = document.querySelector('a[href="/cart"]') || 
                         document.querySelector('.header__icon--cart') || 
                         document.querySelector('.mini-cart-toggle');

        if (cartIcon) {
          cartIcon.click();
        } else {
          const miniCart = document.querySelector('.mini-cart');
          if (miniCart) {
            miniCart.classList.add('active');
            document.documentElement.dispatchEvent(new CustomEvent('cart:refresh', { bubbles: true }));
          }
        }

        const cartBubble = document.querySelectorAll('.cart-count-bubble span, .header__cart-count');
        cartBubble.forEach(el => {
            let currentCount = parseInt(el.innerText || 0);
            el.innerText = currentCount + 1;
        });
      })
      .catch((error) => {
        console.error('Error:', error);
        this.innerHTML = textError;
        this.style.opacity = '1';
      });
    });
  });
  });
</script>

