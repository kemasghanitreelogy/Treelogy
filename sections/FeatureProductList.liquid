  }
  .product-features li {
    font-size: 14px;
    color: #555;
    padding: 6px 0 6px 20px;
    position: relative;
  }
  .product-features li:before {
    content: "â€¢";
    position: absolute;
    left: 0;
    color: #5a7d5f;
    font-weight: bold;
  }
  .product-price {
    margin-top: 10px;
    margin-bottom: 20px;
    display: flex;
    align-items: center;
    gap: 7px;
    font-size: 14px;
    color: #2b3c35;
  }
  .price {
    font-weight: 500;
    color: #2b3c35;
  }
  .price-compare {
    text-decoration: line-through;
    font-weight: 300;
  }

  /* --- NEW BUTTON STYLES START --- */
  .featured-product-card .button-cart {
    width: 100%;
    padding: 16px 24px;
    border: none;
    border-radius: 50px;
    font-size: 16px;
    font-weight: 300;
    cursor: pointer;
    transition: all 0.3s ease;
    color: white;
    background: #567350;
    text-align: center;
    text-decoration: none;
    display: block;
  }

  .featured-product-card .button-cart:hover {
    background: #4a6d4f;
    /* Slightly darker green on hover */
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(90, 125, 95, 0.3);
  }

  /* Ensure overlay button is also styled correctly */
  .product-image-wrapper .button-wrapper .button-cart {
    /* The base styles above will apply, but we ensure it's not overridden */
    display: block;
  }
  /* --- NEW BUTTON STYLES END --- */

  .view-all-wrapper {
    text-align: center;
    margin-top: 40px;
  }
  .button-view-all {
    display: inline-block;
    padding: 14px 40px;
    background: transparent;
    color: #5a7d5f;
    border: 2px solid #5a7d5f;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
  }
  .button-view-all:hover {
    background: #5a7d5f;
    color: white;
  }
  .empty-collection {
    text-align: center;
    padding: 60px 20px;
    color: #999;
  }
  @media (max-width: 1024px) {
    .featured-product-card {
      min-width: 280px;
    }
  }
  @media (min-width: 800px) {
    .featured-product-card {
      width: 380px;
    }
  }

  @media (min-width: 834px) and (max-width: 1180px) {
    .featured-products-section .container {
      max-width: 800px;
    }
  }
  @media (max-width: 768px) {
    .featured-products-section {
      padding: 40px 15px;
    }
    .featured-products-grid {
      column-gap: 20px;
    }
    .featured-product-card {
      min-width: auto;
    }
    .product-info {
      padding: 20px;
    }
    .product-title {
      font-size: 20px;
    }
    .price {
      font-size: 20px;
    }
  }
</style>

{% schema %}
  {
    "name": "Featured Products List",
    "tag": "section",
    "class": "section-featured-products",
    "settings": [
      {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      },
      {
        "type": "range",
        "id": "products_limit",
        "min": 2,
        "max": 50,
        "step": 1,
        "label": "Products to show",
        "default": 8
      },
      {
        "type": "checkbox",
        "id": "show_view_all",
        "label": "Show 'View All' button",
        "default": true
      },
      {
        "type": "text",
        "id": "view_all_text",
        "label": "View All button text",
        "default": "View All"
      }, {
        "type": "text",
        "id": "empty_text",
        "label": "Empty collection text",
        "default": "No products found. Please select a collection."
      }
    ],
    "presets": [
      {
        "name": "Featured Products List"
      }
    ]
  }
{% endschema %}