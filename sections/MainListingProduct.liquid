<div class="collection-listing">
  <div class="header box-container">
    <h2 class="h1">{{ collection.title }}</h2>
    <div class="search-input">
      <input type="search" placeholder="Search" id="search-product-inline">
    </div>
  </div>
  <div class="product-listing box-container" id="products-listing">
    {% assign all_collection_handle = 'all-products' %}
    {% assign all_collection = collections[all_collection_handle] %}
    {% paginate all_collection.products by 20 %}
      {% for product in all_collection.products %}
        {% render 'ProductCard', item: product %}
      {% else %}
        <p>No product(s)</p>
      {% endfor %}
      {% if paginate.pages > 1 %}
        {{ paginate | default_pagination }}
      {% endif %}
    {% endpaginate %}
  </div>
</div>
