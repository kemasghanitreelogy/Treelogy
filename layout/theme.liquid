<!doctype html>
<html>
  <head>
    {% if request.path == '/collections/all' %}
      <title>Treelogy | All Products</title>
    {% elsif request.path == '/blogs/news' %}
      <title>Treelogy | Blog</title>
    {% else %}
      <title>{{ page_title }}</title>
    {% endif %}

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    {% if request.path == '/collections/all' %}
      <meta
        name="description"
        content="Browse all Treelogy products made with organic moringa, including powders, capsules, oils, and wellness bundles."
      >
    {% elsif request.path == '/blogs/news' %}
      <meta
        name="description"
        content="Read the Treelogy Journal for wellness tips, moringa recipes, product insights, and stories from our farm and community."
      >
    {% else %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}
    <link rel="canonical" href="{{ canonical_url }}">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">

    {{ content_for_header }}

    {% if request.path contains '/pages/vip-early-access' %}
      <meta property="og:image" content="https://cdn.shopify.com/s/files/1/0668/4776/8764/files/The_Movement_Relief_1__11zon.png?v=1764405259">
      <meta name="twitter:image" content="https://cdn.shopify.com/s/files/1/0668/4776/8764/files/The_Movement_Relief_1__11zon.png?v=1764405259">
    {% endif %}

    {% if settings.favicon != blank %}
      <link rel="icon" href="{{ settings.favicon | image_url }}" type="image/png">
    {% endif %}

    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">
    
    <script>
      window.texts = {
          allSet: '{{ 'cart.progress.all_set' | t }}',
          leftText: '{{ 'cart.progress.left_text' | t }}',
          onlyText: '{{ 'cart.progress.only_text' | t }}',
          cartTitle: '{{ 'cart.title' | t }}',
          cartEmpty: '{{ 'cart.empty_cart_text' | t }}',
        }
    </script>
    <!-- Header hook for plugins -->
    {% comment %} {{ 'app.css' | asset_url | stylesheet_tag }} {% endcomment %}
    {{ 'theme.css' | asset_url | stylesheet_tag }}
    {{ 'app.bundle.js' | asset_url | script_tag }}
    {{ 'review.bundle.js' | asset_url | script_tag }}

    <script>
      window.faqs = [];
    </script>

    <!-- Custom assets - Lugus -->
    <link rel="stylesheet" href="{{ 'lugus-custom.css' | asset_url }}">
    <script src="{{ 'lugus-custom.js' | asset_url }}" defer></script>
    <script src="https://t.contentsquare.net/uxa/b315e3b428943.js"></script>
  </head>
  <body>
    {% section 'Header' %}

    <main id="landing-page" role="main">
      {{ content_for_layout }}
    </main>
    {% section 'Footer' %}
  </body>
     <script>
      window.addEventListener("klaviyoForms", function(e) {
        if (e.detail.type == 'submit') {
          // Define target VIP Form IDs
          var vipFormIds = ['WM9fu2', 'WhhKjp'];
          
          if (vipFormIds.includes(e.detail.formId)) {
            // Check if Facebook Pixel is initialized
            if (typeof fbq !== 'undefined') {
              fbq('track', 'Lead', {
                content_name: 'VIP Early Access Signup',
                content_category: 'Lead',
                content_ids: [e.detail.formId],
                status: 'success'
              });
              // Silent debug log (visible only in browser console)
              console.log('Treelogy Tracking: Meta Lead Event fired for form ' + e.detail.formId);
            }
          }
        }
      });
    </script>
</html>
