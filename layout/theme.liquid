<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-5FEYFJ1YMV"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'G-5FEYFJ1YMV');
    </script>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
    <link rel="canonical" href="{{ canonical_url }}">

    <link
      rel="preconnect"
      href="https://cdn.shopify.com"
      crossorigin>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin>
    <link
      rel="preconnect"
      href="https://t.contentsquare.net"
      crossorigin>
    <link
      rel="preconnect"
      href="https://cdn.jsdelivr.net"
      crossorigin>

    {% if request.path == '/collections/all' %}
      <title>Treelogy | All Products</title>
      <meta name="description" content="Browse all Treelogy products made with organic moringa, including powders, capsules, oils, and wellness bundles.">
    {% elsif request.path == '/blogs/news' %}
      <title>Treelogy | Blog</title>
      <meta name="description" content="Read the Treelogy Journal for wellness tips, moringa recipes, product insights, and stories from our farm and community.">
    {% else %}
      <title>{{ page_title }}</title>
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    {% if request.path contains '/pages/vip-early-access' %}
      <meta property="og:image" content="https://cdn.shopify.com/s/files/1/0668/4776/8764/files/The_Movement_Relief_1__11zon.png?v=1764405259">
      <meta name="twitter:image" content="https://cdn.shopify.com/s/files/1/0668/4776/8764/files/The_Movement_Relief_1__11zon.png?v=1764405259">
    {% endif %}

    {% if settings.favicon != blank %}
      <link
        rel="icon"
        href="{{ settings.favicon | image_url: width: 32, height: 32 }}"
        type="image/png">
    {% endif %}

    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">

    {{ content_for_header }}

    {{ 'theme.css' | asset_url | stylesheet_tag: preload: true }}
    {{ 'lugus-custom.css' | asset_url | stylesheet_tag }}

    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

    <script src="{{ 'app.bundle.js' | asset_url }}"></script>
    <script src="{{ 'review.bundle.js' | asset_url }}"></script>
    <script src="{{ 'lugus-custom.js' | asset_url }}"></script>

    <script src="https://t.contentsquare.net/uxa/b315e3b428943.js" async></script>

    <script>
      window.texts = {
          allSet: '{{ 'cart.progress.all_set' | t }}',
          leftText: '{{ 'cart.progress.left_text' | t }}',
          onlyText: '{{ 'cart.progress.only_text' | t }}',
          cartTitle: '{{ 'cart.title' | t }}',
          cartEmpty: '{{ 'cart.empty_cart_text' | t }}',
        };
      window.faqs = [];
    </script>
  </head>

  <body>
    {% section 'Header' %}

    <main id="landing-page" role="main">
      {{ content_for_layout }}
    </main>

    {% section 'Footer' %}

    <script>
      window.addEventListener("klaviyoForms", function(e) {
        if (e.detail.type == 'submit') {
          var vipFormIds = ['WM9fu2', 'WhhKjp'];
          if (vipFormIds.includes(e.detail.formId)) {
            if (typeof fbq !== 'undefined') {
              fbq('track', 'Lead', {
                content_name: 'VIP Early Access Signup',
                content_category: 'Lead',
                content_ids: [e.detail.formId],
                status: 'success'
              });
            }
          }
        }
      });
    </script>
  </body>
</html>