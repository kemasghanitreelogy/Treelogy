<div class="main-grid contact-page">
  <div class="inner">
    <h1 class="h1">{{ page.title }}</h1>
    {% form 'contact' %}
      <div class="form-wrapper">
        <div class="group">
          <label for="ContactFormName" class="sub-head">First Name</label>
          <input type="text" id="ContactFormName" name="contact[name]" class="required" data-label="Name">
          <label for="ContactFormName" class="sub-head">Last Name</label>
          <input type="text" id="ContactFormLastName" name="contact[last_name]">
          <label for="ContactFormEmail" class="sub-head">E-mail</label>
          <input type="email" id="ContactFormEmail" class="required" name="contact[email]" data-label="Email">
        </div>
        <div class="group">
          <label for="ContactFormMessage sub-head">Message</label>
          <textarea
            rows="10"
            id="ContactFormMessage"
            name="contact[body]"
            class="required"
            data-label="Message"
          ></textarea>
        </div>
      </div>
      <div class="footer">
        <div class="button">
          <input type="submit" value="Submit" class="button-submit">
        </div>
        {% if form.posted_successfully? %} Thank you for your contact {% endif %}
        {{ form.errors | default_errors }}
      </div>
    {% endform %}
  </div>
</div>
